  <tr>
    <td align="center"><table cellspacing="0" cellpadding="0">
      <col width="169" />
      <col width="157" />
      <col width="167" />
      <col width="130" />
      <col width="62" />
      <col width="94" />
      <col width="38" />
      <col width="151" />
      <col width="256" />
      <tr>
        <td colspan="9" align="center" valign="bottom"><h1> <%= @order.delivery_to %> </h1></td>
      </tr>
      <tr>
        <td colspan="9"></td>
      </tr>
    </table></td>
  </tr>
</table>
</body>
</html>
